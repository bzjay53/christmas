{
  "version": 2,
  "builds": [
    {
      "src": "app/web/simple_test.py",
      "use": "@vercel/python",
      "config": { "maxLambdaSize": "15mb" }
    },
    {
      "src": "app/web/static/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/app/web/static/$1"
    },
    {
      "src": "/(.*)",
      "dest": "app/web/simple_test.py"
    }
  ],
  "env": {
    "CHRISTMAS_ENV": "production"
  }
} 