# Christmas 환경 설정 파일 템플릿
# 실제 사용 시 .env로 복사하고 값을 변경하세요.

# 기본 환경 설정
CHRISTMAS_ENV=development  # development, test, production

# 데이터베이스 설정
CHRISTMAS_DB_HOST=timescaledb
CHRISTMAS_DB_PORT=5432
CHRISTMAS_DB_USER=christmas
CHRISTMAS_DB_PASSWORD=christmas_secure_password
CHRISTMAS_DB_NAME=christmas

# Redis 설정
CHRISTMAS_REDIS_HOST=redis
CHRISTMAS_REDIS_PORT=6379
CHRISTMAS_REDIS_PASSWORD=redis_secure_password

# 웹 서버 설정
FLASK_SECRET_KEY=your_secure_secret_key
FLASK_DEBUG=True
FLASK_PORT=5000
FLASK_HOST=0.0.0.0

# API 서버 설정
API_KEY=your_secure_api_key
JWT_SECRET_KEY=your_secure_jwt_secret

# 증권사 API 설정
BROKER_API_KEY=your_broker_api_key
BROKER_API_SECRET=your_broker_api_secret
BROKER_API_URL=https://api.broker.com

# 모니터링 설정
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin_secure_password

# 알림 설정
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
EMAIL_USERNAME=your_email@example.com
EMAIL_PASSWORD=your_email_password
EMAIL_SMTP_SERVER=smtp.example.com
EMAIL_SMTP_PORT=587

# SSL 설정
SSL_CERT_PATH=/etc/nginx/ssl/server.crt
SSL_KEY_PATH=/etc/nginx/ssl/server.key

# Vercel 배포 설정
VERCEL_PROJECT_ID=your_vercel_project_id
VERCEL_ORG_ID=your_vercel_org_id
VERCEL_TOKEN=your_vercel_token 